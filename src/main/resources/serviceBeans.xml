<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--GENERAL SERVICES FOR CRUD OPERATIONS SEE GeneralService.class-->
    <bean id="itemService" class="com.example.service.GeneralService">
        <constructor-arg name="repository" ref="itemRepository"/>
    </bean>

    <bean id="itemAttribute" class="com.example.service.GeneralService">
        <constructor-arg name="repository" ref="itemAttrributeRepository"/>
    </bean>

</beans>